{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "enabledManagers": ["npm"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "major"],
      "enabled": false
    },
    {
      "matchPackagePatterns": [".*"],
      "matchVulnerabilitySeverity": "low",
      "enabled": true,
      "automerge": false
    }
  ]
}
